--style full
--border --padding 1,2
--height 80%
--border rounded
--margin 1
--multi
--no-hscroll
--layout reverse
--inline-info
--input-label ' Input '
--pointer 'âž¤ '
--color 'bg:#1e1e2e,bg+:#313244,fg:#cdd6f4,fg+:#cdd6f4,hl:214,hl+:76'
